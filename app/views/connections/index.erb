<img class="coverPhoto" src="/cityscape2.png">

<div class="page-container">

  <style>
  form { display: inline; }
  form input {
    background:none!important;
    border:none;
    padding:0!important;
    font: inherit;
    color: -webkit-link;
    text-decoration: underline;
    cursor: auto;
  }
  </style>

  <br>
  <br>

  <h1>All Connections</h1>
  <div class="connections">
    <ul>
      <% @connections.flatten.each do |connection| %>
        <li><%= "#{connection.list.name} - #{connection.full_name} "%> - <a href="/connections/<%= connection.id %>">Show</a>
        <a href="/connections/<%= connection.id %>/edit">Edit</a>
        <%= erb :"connections/_delete", layout: false, locals: {connection: connection} %>
        </li>
      <% end %>
    </ul>
  </div>

</div>
