<div>
  <div>
    <label for="list_name">Name</label>
    <input id="list_name" name="list[name]" type="text" value="<%=@list.name %>"/>
  </div>
  <div>
    <label for="list_tier">Tier</label><br>
    <input type="radio" name="list[tier]" value=1 checked>1<br>
    <input type="radio" name="list[tier]" value=2>2<br>
    <input type="radio" name="list[tier]" value=3>3
  </div>
  <div>
    <label for="list_notes">Notes</label>
    <textarea name="list[notes]" cols="60" rows="10"></textarea>
  </div>
</div>
